{{ 'component-kendama-multicolumn-image.css' | asset_url | stylesheet_tag}}

<div class="multicolumn-image margin-vertical-lg">
    <h1 class="bold">{{ section.settings.heading }}</h1>
    <div class="multicolumn-image__columns">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when "column" %}
                    <a class="column" href="{{ block.setting.image_link }}">
                        <div>
                            {% if block.setting.image != blank %}
                                {{ block.settings.image | img_url: 'medium' | img_tag }}
                            {% else %}
                                {{ 'image' | placeholder_svg_tag: 'image-placeholder' }}
                            {% endif %}
                            
                        </div>
                    </a>    
            {% endcase %}
        {% endfor %}
    </div>
</div>


{% schema %}
{
    "name": "Multicolumn Image",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
        }
    ],
    "blocks": [
        {
            "name": "Column",
            "type": "column",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "image_link",
                    "label": "Image link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Multicolumn image",
            "blocks": [
                {
                    "type": "column"
                },
                {
                    "type": "column"
                },
                {
                    "type": "column"
                }
            ]
        }
    ]
}
{% endschema %}