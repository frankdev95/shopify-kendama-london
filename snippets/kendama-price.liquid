{%- liquid 
    assign target = product.selected_or_first_available_variant
    assign compare_at_price = target.compare_at_price 
    assign price = target.price
    assign available = target.available | default: false
    assign money_price = price | money

    if product.price_varies 
        assign money_price = 'products.product.price.from_price_html' | t: price: money_price
    endif
-%}

<div class="kendama-price
    {%- if available == false -%} kendama-price--sold-out {%- endif -%}
    {%- if compare_at_price > price -%} kendama-price--on-sale {%- endif -%}">

    <div class="kendama-price__regular">
        <span class="kendama-price__item kendama-price__item--regular">
            {{ money_price }}
        </span>
    </div>
    <!-- <div class="kendama-price__sale">
        <s> {{ compare_at_price | money}} </s>
        <span class="kendama-price__item kendama-price__item--sale">
            {{ money_price }}
        </span>
    </div> -->
</div>